#m5fsv01/SDC
if [[ ! -e ~/shared-drives/LDrive ]]; then
  ln -s /mnt/m5fsv01/SDC shared-drives/LDrive
fi

#python
export PYENV_ROOT=$HOME/.pyenv
export PATH=$PATH:$PYENV_ROOT/bin
if command -v pyenv 1>/dev/null 2>&1; then
  export PATH=$PATH:$HOME/.pyenv/shims
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
fi

export PYTHON27_DIR=/usr/bin
export PYTHON37_DIR=/usr/bin
export PYTHON2_EXECUTABLE=/usr/bin/python2
export PYTHON3_EXECUTABLE=/usr/bin/python3
